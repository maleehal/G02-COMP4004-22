    <title>Home</title>
</head>
<header>
    <%- include('partials/header'); %>
</header>
<body>
    <!--THE SECTION 1-->
    <section class="main-img-container-class">
        <div class="box-container">
            <div class="box-container-2">
                <img src="/images/mainimg.png" alt="image">
                <div class="heading"><h2>WELCOME TO EVENT HUSTLER</h2></div>
                <div class="heading-2">
                    <p>
                        Plan your special days to be beautiful and memorable
                    </p>
                </div>

            </div>
        </div>
    </section>

<!--THE SECTION 2-->

    <center><h1>Top Service Providers</h1></center>
    <!--Main box for the content!-->
    <div class="container-sub-1"> 
        <% topThreeProviders.forEach((provider) => { %>
            <div class ="container-sub-1-1">
                <img class="profilepic" src="/images/image 2.png">
                <div><%= provider.name %> </div>
                <div><%= provider.rating %> </div>
                <button class="providerprofile"><a href="/service_provider/<%= provider._id %>"> View Provider</a></button>
            </div>
        <% }) %>
        
       
        
       
    </div>



<!--THE SECTION 3-->

    <section class="container">
        <div class="container-sub">
            <div> <img class="partyimg" src="/images/image 4.png">
            </div>
            <div> <img class="partyimg" src="/images/Rectangle.png">
            </div>
            <div> <img class="partyimg" src="/images/religious 1.png">
            </div>
            <div>
                <img class="partyimg" src="/images/image 4.png">
            </div>
        </div>
    </section>
</body>
<footer>
    <%- include('partials/footer'); %>
